{% extends 'base.html.twig' %}

{% block body %}
    <!-- section -->
    <div class="section">
        <!-- container -->
        <div class="container">
            <!-- row -->
            <div class="row">
                <form id="checkout-form" class="clearfix">
                    <div class="col-md-12">
                        <div class="order-summary clearfix">
                            <a class="primary-btn add-to-cart" href="{{ path('produits_index') }}">Back to the list</a>

                            <div class="section-title">

                                <h3 class="title">My Wishilist</h3>
                            </div>
                            <table class="shopping-cart-table table">
                                <thead>
                                <tr>
                                    <th></th>
                                    <th>Product</th>
                                    <th class="text-center">Price</th>

                                    <th class="text-center"></th>
                                    <th class="text-right"></th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for wishlist in wishlists %}
                                <tr>
                                    <td class="thumb"><img src="{{ asset('uploads/brochures/' ~ wishlist.idProduit.photo) }}"></td>
                                    <td class="details">
                                        <a href="#">{{ wishlist.idProduit.titre }}</a>

                                    </td>
                                    <td class="price text-center"><strong>{{ wishlist.idProduit.prix }} dt</strong></td>

                                    <td class="total text-center"><strong class="primary-color"></strong>  <a class="pull-right">
                                            <button class="primary-btn"   ><a href="{{ path('panier_add1', { 'id': wishlist.idProduit.id , 'idR': wishlist.id})}}"> Add to cart</button></a>
                        </div></td>

                        <td><a class="main-btn icon-btn" href="{{ path('panier_ajout', { 'id': wishlist.idProduit.id })}}"><i class="fa fa-close"></i></>
                                    </td>
                                </tr>
                                {% endfor %}
                                </tbody>

                            </table>

                        </div>

                    </div>
                </form>
            </div>
            <!-- /row -->
        </div>
        <!-- /container -->
    </div>
    <!-- /section -->
{% endblock %}
