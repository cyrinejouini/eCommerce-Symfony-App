{% extends 'base.html.twig' %}
{% block stylesheets %}

{% endblock %}
{% block title %}
    Vente
{% endblock %}

{% block body %}
    <!-- BREADCRUMB -->
    <div id="breadcrumb">
        <div class="container">
            <ul class="breadcrumb">
                <li><a href="#">Acceuil</a></li>
               <li> <a href="{{path('all_vente')}}" >Vente </a></li>
                <li class="active">Modifier</li>
            </ul>
        </div>
    </div>
    <!-- /BREADCRUMB -->

    {% set flashbag_notices = app.session.flashbag.get('notice') %}
    {% if flashbag_notices is not empty  %}
        {% for notice in flashbag_notices %}
            <div class="container">
                <div class="alert alert-danger " role="alert">
                    <strong>Erreur !</strong> {{ notice }} <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                </div>
            </div>
        {% endfor %}
    {% endif %}
    <div class="section">
        <!-- container -->
        <div class="container">
            <!-- row -->
            <div class="row">
                <form enctype="multipart/form-data" method="POST" class="form-horizontal"  >

                    <div class="col-md-8 col-lg-offset-2">
                        <div class="billing-details">

                            <div class="section-title">
                                <h3 class="title">Modifiez une annonce de vente </h3>
                            </div>


                            <div class="form-group">
                                <input class="input" type="text" name="titre" id="titre" placeholder="Titre" value="{{ vente.titre }}" required>
                            </div>


                            <div class="form-group">
                                <input class="input" type="text" name="categorie" id="categorie" placeholder="Categorie" value="{{ vente.categorie }}" required>
                            </div>



                            <div class="form-group">
                                <input class="input" type="number" name="prix" id=" prix" placeholder="Prix" value="{{ vente.prix }}" required>
                            </div>



                            <div class="form-group">
                                <input class="input" type="text" name="emplacement" id="emplacement" placeholder="Emplacement" value="{{ vente.emplacement }}"  required>
                            </div>


                            <div class="form-group">
                                <label for="description"> description</label>
                                <textarea  class="input" type="text" name="description" id="description" placeholder="Description" value="{{ vente.description }}"  required> </textarea>
                            </div>


                            <div class="form-group">
                                <label for="photo"> Ajouter une photo</label>
                                <input type="file" name="photo" id="photo" required>
                            </div>


                            <button  type="submit" name="submit"   class="primary-btn">Modifier</button>

                        </div>
                    </div>

                </form>
            </div>
            <!-- /row -->
        </div>
        <!-- /container -->
    </div>
    <!-- /section -->





{% endblock %}
{% block javascripts %}

{% endblock %}