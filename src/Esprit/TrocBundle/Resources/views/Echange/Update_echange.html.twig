{% extends 'base.html.twig' %}
{% block stylesheets %}

{% endblock %}
{% block title %}
    ÉCHANGE
{% endblock %}


{% block body %}

    <!-- BREADCRUMB -->
    <div id="breadcrumb">
        <div class="container">
            <ul class="breadcrumb">
                <li><a href="#">Acceuil</a></li>
                <li>Echange</li>
                <li class="active">Modification</li>
            </ul>
        </div>
    </div>
    <!-- /BREADCRUMB -->
<div class="section">
<!-- container -->
<div class="container">
    <!-- row -->
    <div class="row">
        <form enctype="multipart/form-data" method="POST" class="form-horizontal"  >

            <div class="col-md-6">
                <div class="billing-details">

                    <div class="section-title">
                        <h3 class="title">Modifiez une annonce</h3>
                    </div>


                    <div class="form-group">
                        <input class="input" type="text" name="titre_afficher" id="titre_afficher" placeholder="Titre" required value="{{ echange.titreAfficher }}">
                    </div>

                    <div class="form-group">


                        <input type='text' list="categorie_result" class="form-control search_input" name="categorie_name" id="categorie_input" placeholder="Categorie " oninput='onInput()' value="{{ echange.categorieAfficher.nom }}"   required  />
                        <datalist id="categorie_result">
                        </datalist>
                    </div>


                    <div class="form-group">
                        <input class="input" type="text" name="titre_demander" id=" titre_demander" placeholder="Objet demander"  value="{{ echange.titreDemande }}" required >
                    </div>



                    <div class="form-group">
                        <input class="input" type="text" name="emplacement" id="emplacement" placeholder="Emplacement" value="{{ echange.emplacement }}" required>
                    </div>


                    <div class="form-group">
                        <label for="description"> description</label>
                        <textarea  class="input" type="text" name="description" id="description" placeholder="Description" required>{{ echange.description }} </textarea>
                    </div>


                    <div class="form-group">
                        <label for="photo"> Ajouter une photo</label>
                        <input type="file" name="photo" id="photo" required>
                    </div>


                    <button  type="submit" name="submit" class="primary-btn">Modifier</button>

                </div>
            </div>


            <div class="col-md-6">
                <div class="shiping-methods">
                    <div class="section-title">
                        <h4 class="title">Échange</h4>
                    </div>

                    <div>
                        <a class="logo" href="#">
                            <img src="{{asset('RessourcesTemplate/img/login.jpg')}}" alt="" height="400 px" width="700 px ">
                        </a>
                    </div>

                </div>
            </div>



            <div class="col-md-12">
                <div class="order-summary clearfix">
                    <div class="section-title">
                        <h3 class="title">Mes Annonces</h3>
                    </div>
                    <table class="shopping-cart-table table">
                        <thead>
                        <tr>
                            <th>Produit</th>
                            <th></th>
                            <th class="text-center">Objet Demander</th>
                            <th class="text-center">Emplacement</th>
                            <th class="text-center">Description</th>
                            <th class="text-center">Modifier</th>
                            <th class="text-center">Supprimer</th>

                        </tr>
                        </thead>
                        <tbody>
                        {% for l in echanges_infos %}
                        <tr>
                            <td class="thumb"><img src="{{ asset('uploads/brochures/' ~ l.photo) }}" alt=""></td>
                            <td class="details">
                                <a href="#">{{ l.titreAfficher }}</a>
                                <ul>
                                    <li><span>Categorie: {{ l.categorieAfficher.nom }}</span></li>
                                    <li><span>Ajouter le: {{ l.dateAjout|date('Y-m-d')  }}</span></li>
                                </ul>
                            </td>
                            <td class="price text-center"><strong>{{ l.titreDemande }}</strong></td>

                            <td class="total text-center"><strong class="primary-color">{{ l.emplacement }}</strong></td>
                            <td class="qty text-center"><span>{{ l.description }}</span></td>
                            <td class="text-right"><button class="main-btn icon-btn"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></button></td>
                            <td class="text-right"><a href="{{path('delete_echange', {id: l.id})}}" class="main-btn icon-btn"><i class="fa fa-close"></i></a></td>
                        </tr>
                        {% endfor %}
                        </tbody>

                    </table>

                </div>

            </div>







        </form>
                </div>
    <!-- /row -->
</div>
    <!-- /container -->
</div>
    <!-- /section -->





{% endblock %}
{% block javascripts %}
    <script src="{{asset('RessourcesTemplate/js/scriptEchange.js')}}"></script>
{% endblock %}